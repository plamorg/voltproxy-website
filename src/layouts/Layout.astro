---
import Navbar from "../components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="voltproxy.plam.dev" />
    <meta property="og:url" content="https://voltproxy.plam.dev/" />
    <meta
      property="og:description"
      content="A reverse proxy focused on simplicity and Docker integration."
    />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="A reverse proxy focused on simplicity and Docker integration."
    />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-b from-gray-100 to-gray-200 min-h-screen">
    <Navbar />
    <slot />
  </body>
</html>
